<% provide(:title, @user.name) %>
<div class="row" id="semi-header">
  <div class="sidebar-profile-summary">
    <% if @user.admin == true %>
      <h1 class="admin-name">
        <%= @user.name %>
      </h1>
    <% elsif @user.mod == true %>
      <h1 class="mod-name">
        <%= @user.name %>
      </h1>
    <% else %>
      <h1>
        <%= @user.name %>
      </h1>
    <% end %>
    <p>
      <%= time_ago_in_words(@user.created_at) %> old
    </p>
    <p>
      <%= @user.bio %>
    </p>
  </div>
  <div class="feed-profile">
    <% if @user.posts.any? %>
      <h3>Posts (<%= @user.posts.count %>)</h3>
      <ol class="posts">
        <%= render @posts %>
      </ol>
      <%= will_paginate @posts %>
    <% end %>
    <% if @user.topics.any? %>
      <h3>Topics (<%= @user.topics.count %>)</h3>
      <ol class="topics">
        <%= render @topics %>
      </ol>
      <%= will_paginate @topics %>
    <% end %>
    <% if @user.forums.any? %>
      <h3>Forums (<%= @user.forums.count %>)</h3>
      <ol class="forums">
        <%= render @forums %>
      </ol>
      <%= will_paginate @forums %>
    <% end %>
  </div>
</div>