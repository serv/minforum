<h1>Topics</h1>

<table class="table">
  <tbody>
    <thead>
      <tr>
        <th>Topics</th>
      </tr>
    </thead>
    <%= link_to "New Topic", new_forum_topic_path %>
    <% @topics.each do |topic| %>
      <tr>
        <td>
          <%= topic.name %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>