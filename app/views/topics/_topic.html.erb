<li>
  <div class="on_user_profile">
    <span class="feed_body"><%= link_to topic.name, topic_posts_path(topic) %></span>
    <span class="timestamp">
      Created <%= time_ago_in_words(topic.created_at) %> ago.
    </span>
    <% if current_user?(topic.user) %>
    <span class="feed_setting">
      <%= link_to "Edit", edit_topic_path(topic) %> <%= link_to 'Delete', topic, confirm: 'Are you sure?', method: :delete %>
    <span>
    <% end %>
  </div>
</li>