<% provide(:title, "Reply to #{@topic.name}") %>

<h1>Reply</h1>

<div class="main-form">
  <%= form_for [@topic, @post] do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    
    <%= render 'form', :f => f %>

    <%= f.submit "Create a reply", class: "btn btn-large btn-primary" %>
  <% end %>
</div>
