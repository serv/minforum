<h1>Reply</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for [@topic, @post] do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      
      <%= render 'form', :f => f %>

      <%= f.submit "Create a reply", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>