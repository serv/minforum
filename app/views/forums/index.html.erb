<div class="row" id="semi-header">
  <div class="span10">
    <h1>Forums</h1>
  </div>
  <div class="span2">
    <%= link_to "New Forum", new_forum_path, html_options = {:class => "btn btn-large btn-primary"} %>
  </div>
</div>

<table class="table">
  <tbody>
    <thead>
      <tr>
        <th>General Forums</th>
        <th>Topics</th>
        <th>Posts</th>
        <th>Last Post</th>
      </tr>
    </thead>
    <% @forums.each do |forum| %>
      <tr>
        <td>
          <%= link_to forum.name, forum_topics_path(forum) %> </br> <%= forum.description %>
        </td>
        <td>
          <%= forum.topics.count %>
        </td>
        <td>
          <!-- forum.posts_count -->
        </td>
        <td>
          <!-- forum.last_topic_id -->
        </td>
      </tr>
    <% end %>
  </tbody>
</table>