<% provide(:title, 'Create a forum') %>

<h1>Create a forum</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@forum) do |f| %>
      <%= render 'shared/forum_error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :description %>
      <%= f.text_area :description, :rows => 6 %>

      <%= f.submit "Create a forum", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>