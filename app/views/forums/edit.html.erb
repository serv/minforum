<% provide(:title, 'Edit the forum') %>

<h1>Edit the forum</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for @forum do |f| %>
      <!-- render 'shared/error_messages_topic' -->
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :description %>
      <%= f.text_area :description, :rows => 6 %>

      <%= f.submit "Edit", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>