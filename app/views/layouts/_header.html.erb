<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "Minforum", root_path, id: "logo" %>
      <nav>
        <ul class="nav">
          <li>
            <%= link_to 'Popular', popular_path %>
          </li>
          <li>
            <%= link_to 'New', new_path %>
          </li>
        </ul>
        <ul class="nav pull-right">
          <% if signed_in? %>
            <% if current_user.state.new_message == true %>
              <li><%= link_to '', messages_path, :id => 'new-message'%></li>
            <% else %>
              <li><%= link_to '', messages_path, :id => 'message'%></li>
            <% end %>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= current_user.name %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Setting", setting_path %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Sign out", signout_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Sign in", signin_path %></li>
            <li><%= link_to "Register", signup_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>